<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-5 col-md-8 col-lg-4">
      <h2>支出明細修改</h2>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-10 col-md-8 col-lg-6">
      {{!-- form --}}
      <form action="/records/{{ record._id }}/edit" method="POST">
        <div class="mb-3 row">
          <label for="name" class="col-sm-2 col-form-label">名稱</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" placeholder="請輸入名稱" name="name" minlength="2"
              maxlength="25" required value="{{ record.name }}">
          </div>
        </div>

        <div class="mb-3 row">
          <label for="datepicker" class="col-sm-2 col-form-label">日期</label>
          <div class="col-sm-10">
            <input type="text" id="datepicker" name="date" class="form-control" placeholder="請選擇日期"
              pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" title="請輸入西元年-月-日 ex: 2021-05-20" required value="{{ record.date }}">
          </div>
        </div>

        <div class="mb-3 row">
          <label for="category" class="col-sm-2 col-form-label">類別</label>
          <div class="col-sm-10">
            <select class="form-select" aria-label=".form-select" name="category" id="category" required>
              <option disabled>請選擇類別</option>
              <option value="meals" {{#if (eq record.category 'meals' )}} selected {{/if}}>餐飲食品 </option>
              <option value="traffics" {{#if (eq record.category 'traffics' )}} selected {{/if}}>交通出行</option>
              <option value="entertainments" {{#if (eq record.category 'entertainments' )}} selected {{/if}}>休閒娛樂
              </option>
              <option value="living" {{#if (eq record.category 'living' )}} selected {{/if}}>家居物業</option>
              <option value="others" {{#if (eq record.category 'others' )}} selected {{/if}}>其他</option>
            </select>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="name" class="col-sm-2 col-form-label">金額</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="amount" name="amount" min="1" max="100000000" required
              placeholder="請輸入金額 1~100000000" value="{{ record.amount }}">
          </div>
        </div>
        <div class="d-flex justify-content-end">
          <a href="/" class="btn btn-secondary me-2">返回</a>
          <button type="submit" class="btn btn-success">修改</button>
        </div>
      </form>
    </div>
  </div>
</div>